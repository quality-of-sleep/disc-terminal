<div class="col-md-9">
	<table class="table">
		<thead>
			<tr>
				<th>商品</th>
				<th></th>
				<th>価格(税別)</th>
				<th>数量</th>
			</tr>
		</thead>
		<tbody>
			<% @user.carts.each do |cart| %>
				<tr>
					<td style="width: 200px;">
						<%= link_to users_item_path(cart.item_id) do %>
							<%= attachment_image_tag cart.item, :image, :fill, 200, 200, format: 'jpeg', fallback: "/no_image.jpg", size:'150x150' %>
						<% end %>
					</td>
					<td>
						<p>
							<%= link_to users_item_path(cart.item_id) do %>
								<%= cart.item.name %>
							<% end %>
						</p>
						<p><%= cart.item.artist.name %></p>
						<p class="btn btn-default">
							<% if cart.item.sales_status == 1 %>
								販売中止
							<% elsif cart.item.sales_status == 2 %>
								売り切れ
							<% else %>
								販売中
							<% end %>
						</p>
					</td>
					<td>
						<p>¥ <%= cart.item.price.to_s(:delimited) %></p>
						<p><%= link_to "取消", users_user_cart_path(@user.id, cart.id), method: :delete, class: "btn btn-default" %></p>
					</td>
					<td>
						<%= form_tag(url_for(users_user_cart_path(@user.id, cart.id)), method: :patch, :remote => true) do %>
							<div>
								<%= select_tag 'amount', options_for_select(stock_array(cart),:selected=>cart.amount), class: "btn btn-default dropdown-toggle" %>
							</div>
						<div>
							<%= submit_tag "数量変更", class: "btn btn-primary col-md-4" %>
						</div>
						<% end %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
<div class="col-md-3" style="border: 1px solid #bbb">
	<p><%= link_to "購入へ進む", users_user_orders_new_path(@user), class: "btn btn-warning" %></p>
	<p>小計<%=  %>点　　¥<%= @total_price %></p>
	<p>(内消費税　　¥<%= @tax %>)</p>
</div>