<div class="col-md-2"></div>
<div class="col-md-8"  style="margin-bottom: 100px;">
	<div class="row" style="margin-bottom: 25px;">
		<div class="clearfix">
			<h2 style="float: left;">
				"<%= link_to @item.name, users_item_path(@item) %>"へのレビュー
			</h2>
			<% if user_signed_in? %>
				<p class="review-create">
					<%= link_to '新規投稿する', new_users_item_review_path(@item) %>
				</p>
			<% else %>
				<p class="review-create">
					<%= link_to '新規投稿する', new_user_session_path %>
				</p>
			<% end %>
		</div>
	</div>
	<div class="reviews">
		<% @item.reviews.each do |review| %>
			<div class="review-show">
				<h3 style="font-size: 20px">タイトル:</h3>
				<p><%= review.title %></p>
				<h3 style="font-size: 20px">本文：</h3>
				<p><%= review.body %></p>
				<% if current_user == review.user %>
					<div class="clearfix">
						<span>
							<%= link_to '編集', edit_users_item_review_path(@item, review), class: "btn btn-success col-md-1", style: "font-size: 16px; margin-right: 15px; float: left;" %> 
						</span>
						<span>
							<%= link_to '削除', users_item_review_path(@item, review), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger col-md-1", style: "font-size: 16px; margin-right: 15px; float: left;" %>
						</span>
						<p style="float: right">投稿日：<%= review.updated_at.strftime('%Y/%m/%d') %></p>
					</div>
				<% end %>
			</div>
		<% end %>
	</div>
</div>