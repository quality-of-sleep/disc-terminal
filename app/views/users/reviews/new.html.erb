<div class="col-md-2"></div>

<div class="col-md-8" style="margin-bottom: 100px;">
	<div class="row" style="margin-bottom: 25px;">
		<h2 style="display: inline-block;">
			"<%= @item.name %>"へのレビュー
		</h2>
	</div>

	<%= form_for(@review, url: {controller: 'reviews', action: 'create'}) do |f| %>
		<div class="review-post col-md-12" >
			<div class="field row" style="margin-bottom: 20px;">
        <%= f.label "レビュータイトル", style: "font-size: 20px;" %>
        <div>
        	<%= f.text_field :title, placeholder: "タイトル：", class: "col-md-5", style: "height: 35px;" %>
        </div>
      </div>
      <div class="field row" style="margin-bottom: 20px;">
        <%= f.label "本文", style: "font-size: 20px;" %>
        <div>
        	<%= f.text_area :body, rows: 10, placeholder: "本文：", class: "col-md-10"%>
        </div>
      </div>
		</div>
		<span>
			<%= f.submit '確定', class: "btn btn-info col-md-1", style: "font-size: 16px; margin-right: 15px;" %>
		</span>
		<span>
			<%= link_to '戻る', users_item_reviews_path(@item), class: "btn btn-default col-md-1", style: "font-size: 16px;" %>
		</span>
	<% end %>
</div>
