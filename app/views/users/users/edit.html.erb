<% if @user.errors.any? %>
<p style="color:red;">編集エラーです。空欄を埋めてください。</p>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-10">
      <h2 style="border: solid 1px; border-radius: 3px; padding: 10px; display:inline-block; margin-top: 20px; margin-bottom: 20px;">登録情報の変更</h2>



        <div class="form-box" style="border: solid 1px; padding: 30px 100px; margin-bottom: 40px;">

        <%= form_for @user, url: users_user_path(@user) do |f| %>

        <div class="field">
          <h4>名前</h4>
          <div class="form-inline">
            <%= f.label "(姓)", class: "col-sm-2 control-label"%>
            <%= f.text_field :last_name, autofocus: true, class: "col-sm-4" %>
            <%= f.label  "(名)", class: "col-sm-2 control-label" %>
            <%= f.text_field :first_name, class: "col-sm-4"%>
          </div>


          <div class="form-inline">
            <%= f.label "(セイ)", class: "col-sm-2 control-label"%>
            <%= f.text_field :last_name_kana, class: "col-sm-4" %>
            <%= f.label  "(メイ)", class: "col-sm-2 control-label" %>
            <%= f.text_field :first_name_kana, class: "col-sm-4"%>
          </div>
        </div>

        <div class="field">
          <h4>電話番号</h4>
          <%= f.number_field :telephone_number, placeholder: "電話番号：", style: "width: 30%;"%>
        </div>

        <div class="field">
          <h4>メールアドレス</h4>
          <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス：", style: "width: 100%;"%>
        </div>

        <div class="field">
          <h4>パスワード</h4>
          <%= f.password_field :password, autocomplete: "current_password", placeholder: "パスワード：8文字以上必須だけど何も入力しなくても他の情報は更新できるっぽいです", style: "width: 100%;"%>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "current_password", placeholder: "パスワード確認：現在登録されているパスワードが自動的にここに黒丸で表示されるようにしたいっすね", style: "width: 100%;" %>
        </div>


        <div class="field">
          <h4>現住所</h4>
          <%= f.label "〒" %>
          <%= f.number_field :postal_code, style: "width: 30%;"%>
        </div>

        <div class="field">
          <%= f.text_area :address, style: "width: 100%;"%>
        </div>


<!----配送先、ここから意味不明だから後で確認したい--->
<h4>配送先</h4>
  <div id="delivery_addresses">
    <%= f.fields_for :delivery_addresses do |delivery_address| %>
      <%= render 'delivery_address_fields', :f => delivery_address %>
          <% end %>
    <div class='links'>
      <%= link_to_add_association '住所を追加', f, :delivery_addresses %>
    </div>
  </div>
<!---ここまで意味不明--->



<!-- orders/new.html.erbのリストVERを丸パクリ -->
    <div class="row">
      <h4>支払い方法</h4>
        <ul style="list-style: none; padding-left: 10px;">
          <li><label><%= f.radio_button :payment, :クレジット支払, class: "radio_button" %> クレジット支払</label></li>
          <li><label><%= f.radio_button :payment, :銀行振込, class: "radio_button" %> 銀行振込</label></li>
          <li><label><%= f.radio_button :payment, :代金引換, class: "radio_button" %> 代金引換</label></li>
        </ul>
    </div>
<!---以上--->

        <span class="actions">
          <%= f.submit "変更を確定",  style: "color: white; background-color: #3399FF; border-radius: 3px; padding: 5px;"%>
        </span>
        <span class="label label-default">
          <%= link_to "戻る", users_user_path(@user) %>
        </span>
        </div>

        <% end %>







    </div>
    <div class="col-sm-1"></div>
  </div>
</div>
