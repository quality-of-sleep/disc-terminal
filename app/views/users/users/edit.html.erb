    <div class="set-content">
      <h2>お支払い方法</h2>
                     <div class="field" style="margin-left: 10px;">


        <label>
          <%= f.radio_button :payment, :クレジット支払, class: "radio_button" %> クレジット支払
        </label>

        <label style="margin: 0 40px; ">
          <%= f.radio_button :payment, :銀行振込, class: "radio_button" %> 銀行振込
        </label>

        <label>
          <%= f.radio_button :payment, :代金引換, class: "radio_button"%> 代金引換
        </label>

</div>
</div>


<!---以上--->

<div>
          <%= f.submit "変更を確定", class: "btn btn-info", style: "margin-left:25%; width:20%; margin-right:10%;"%>
          <%= link_to "戻る", users_user_path(@user), class: "btn btn-default", style: "width: 20%;" %>

        </div>

        <% end %>







    </div>
    <div class="col-sm-1"></div>
  </div>
</div>
