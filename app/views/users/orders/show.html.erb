<div class="col-md-9">
	<div class="row">
		<div>
			<table class="table">
				<tbody>
					<tr>
						<td>
							<%= @order.user_name %><br>
							<%= @order.postal_code %><br>
							<%= @order.address %><br>
							<%= @order.telephone_number %>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>

		<div class="row">
			<table class="table">
					<tbody>
						<tr>
							<td><%= @order.payment %></td>
							<td></td>
						</tr>
					</tbody>
				</table>
		</div>

		<div class="row">
				<%= @order.delivery_status %>
				<%= @order.created_at.strftime('%Y/%m/%d %H:%M') %>
		</div>

		<div class="row">
			<div class="col-md-9">
			<table class="table">
				<thead>
					<tr>
						<th>商品</th>
						<th></th>
						<th>価格(税別)</th>
						<th>数量</th>
					</tr>
				</thead>
				<tbody>
					<% @order.order_details.each do |detail| %>
						<tr>
							<td style="width: 200px;">
								<%= link_to users_item_path(detail.item_id) do %>
									<%= attachment_image_tag detail.item, :image, :fill, 200, 200, format: 'jpeg', fallback: "/no_image.jpg", size:'150x150' %>
								<% end %>
							</td>
							<td>
								<p>
									<%= link_to users_item_path(detail.item_id) do %>
										<%= detail.item.name %>
									<% end %>
								</p>
								<p><%= detail.item.artist.name %></p>
								<p class="btn btn-default">
									<% if detail.item.sales_status == 1 %>
										販売中止
									<% elsif detail.item.sales_status == 2 %>
										売り切れ
									<% else %>
										販売中
									<% end %>
								</p>
							</td>
							<td>
								<p>¥ <%= detail.item.price.to_s(:delimited) %></p>
							</td>
							<td>
									<div><%= detail.amount %> 点</div>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		</div>
	</div>

	<div class="col-md-3" style="border: 1px solid #bbb">
		<p>小計 (<%= @total_amount %>点)　　¥<%= @order.subtotal_price.to_s(:delimited) %></p>
		<p>配送料　 　¥ <%= @order.carriage.to_s(:delimited) %></p>
		<p>割引　 　- ¥ <%= @discount.to_s(:delimited) %></p>
		<p>合計　 　¥<%= @order.total_price.to_s(:delimited) %></p>
		<p>(内消費税　 　¥<%= @order.tax.to_s(:delimited) %>)</p>
	</div>