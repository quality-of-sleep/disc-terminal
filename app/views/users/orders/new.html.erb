<div class="col-md-9">
	<table class="table">
		<thead>
			<tr>
				<th>商品</th>
				<th></th>
				<th>価格(税別)</th>
				<th>数量</th>
			</tr>
		</thead>
		<tbody>
			<% @user.carts.each do |cart| %>
				<tr>
					<td style="width: 200px;">
						<%= link_to users_item_path(cart.item_id) do %>
							<%= attachment_image_tag cart.item, :image, :fill, 200, 200, format: 'jpeg', fallback: "/no_image.jpg", size:'150x150' %>
						<% end %>
					</td>
					<td>
						<p>
							<%= link_to users_item_path(cart.item_id) do %>
								<%= cart.item.name %>
							<% end %>
						</p>
						<p><%= cart.item.artist.name %></p>
						<p class="btn btn-default">
							<% if cart.item.sales_status == 1 %>
								販売中止
							<% elsif cart.item.sales_status == 2 %>
								売り切れ
							<% else %>
								販売中
							<% end %>
						</p>
					</td>
					<td>
						<p>¥ <%= cart.item.price.to_s(:delimited) %></p>
					</td>
					<td>
							<div><%= cart.amount %> 点</div>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
<div class="col-md-3" style="border: 1px solid #bbb">
	<p><%= link_to "購入へ進む", users_user_orders_new_path(@user), class: "btn btn-warning" %></p>
	<p>小計 (<%= @total_amount %>点)　　¥<%= @total_price %></p>
	<p>(内消費税　 　¥<%= @tax %>)</p>
</div>

<%= form_for(@order, url: users_user_orders_path(@user), method: :post) do |f| %>
	<%= f.text_field :tax %>

	<% @user.carts.each do |cart| %>
				<tr>
					<td style="width: 200px;">
						<%= link_to users_item_path(cart.item_id) do %>
							<%= attachment_image_tag cart.item, :image, :fill, 200, 200, format: 'jpeg', fallback: "/no_image.jpg", size:'150x150' %>
						<% end %>
					</td>
					<td>
						<p>
							<%= link_to users_item_path(cart.item_id) do %>
								<%= cart.item.name %>
							<% end %>
						</p>
						<p><%= cart.item.artist.name %></p>
						<p class="btn btn-default">
							<% if cart.item.sales_status == 1 %>
								販売中止
							<% elsif cart.item.sales_status == 2 %>
								売り切れ
							<% else %>
								販売中
							<% end %>
						</p>
					</td>
					<td>
						<p>¥ <%= cart.item.price.to_s(:delimited) %></p>
					</td>
					<td>
							<div><%= cart.amount %> 点</div>
					</td>
				</tr>
			<% end %>

	<%= form_for(@cart, url: users_user_carts_path(@user), method: :post) do |f| %>
	<%= f.text_field :amount %>
<% end %>
<% end %>

