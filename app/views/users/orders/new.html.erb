<%= form_for(@order, url: users_user_orders_path(@user), method: :post) do |f| %>
	<div class="col-md-9">
		<div class="row">
			<h4><strong>配送先</strong></h4>
			<div class="col-md-12">
				<table class="table">
					<thead>
						<tr>
							<th></th>
							<th></th>
						</tr>
					</thead>
					<% @user.delivery_addresses.each do |d| %>
						<tbody class="hero">
							<tr>
								<td class="text-center" ><label style="margin-top: 45%;"><%= f.radio_button :address, d.id, class: "radio_button" %> </label></td>
								<td>
									<p><%= d.recipient %></p>
									<p><%= d.postal_code %></p>
									<p><%= d.details %></p>
									<p><%= d.telephone_number %></p>
								</td>
							</tr>
						</tbody>
					<% end %>
				</table>
			</div>
			<!-- form入るところ -->
			<div>
				<%= fields_for(@delivery_address, url: users_user_orders_path(@user), params: 'cart') do |form| %>
				<%= form.text_field :recipient, class: "col-sm-4" %>
				<%= form.text_field :postal_code, class: "col-sm-4" %>
				<%= form.text_field :details, class: "col-sm-4" %>
				<%= form.text_field :telephone_number, class: "col-sm-4" %>
				<%= hidden_field_tag params: 'cart' %>
				<%= f.submit "登録", params: 'cart' %>
				<% end %>
			</div>
		</div>

		<div class="row">
			<h4 style="margin-bottom: 20px;"><strong>支払方法</strong></h4>
			<div class="col-md-4">
				<ul style="list-style: none; padding-left: 10px;">
					<li><label><%= f.radio_button :payment, :クレジット支払, class: "radio_button" %> クレジット支払</label></li>
					<li><label><%= f.radio_button :payment, :銀行振込, class: "radio_button" %> 銀行振込</label></li>
					<li><label><%= f.radio_button :payment, :代金引換, class: "radio_button" %> 代金引換</label></li>
				</ul>
			</div>
			<div class="col-md-4">
				<p class="btn btn-info active disabled" >カード情報登録</p>
			</div>
		</div>

		<div class="row">
			<div class="col-md-12">
			<table class="table">
				<thead>
					<tr>
						<th>商品</th>
						<th></th>
						<th>価格(税別)</th>
						<th>数量</th>
					</tr>
				</thead>
				<tbody>
					<% @user.carts.each do |cart| %>
						<tr>
							<td class="hero" style="width: 30%;">
								<%= link_to users_item_path(cart.item_id) do %>
									<%= attachment_image_tag cart.item, :image, :fill, 200, 200, format: 'jpeg', fallback: "/no_image.jpg", size:'150x150' %>
								<% end %>
							</td>
							<td style="width: 35%;">
								<div class="text-center" style="margin-bottom: 10%;">
									<%= link_to users_item_path(cart.item_id) do %>
										<%= cart.item.name %>
									<% end %>
								</div>
								<div class="text-center" style="margin-bottom: 10%;">
									<p><%= cart.item.artist.name %></p>
								</div>
								<div class="text-center" >
									<p class="btn btn-default"><%= cart.item.sales_status %></p>
								</div>
							</td>
							<td style="width: 20%;">
									<p>¥ <%= cart.item.price.to_s(:delimited) %></p>
							</td>
							<td>
									<p><%= cart.amount %> 点</p>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		</div>
	</div>
	<div class="col-md-3 price-box">
			<div class="text-center" style="margin-top: 5%; margin-bottom: 15%;">
				<%= f.submit "注文を確定する", class: "btn btn-warning", style: "padding: 7px 30%;" %>
			</div>
			<div class="text-center" style="margin-bottom: 10%;">
				<p>小計 (<%= @total_amount %>点)　　¥<%= @subtotal_price.to_s(:delimited) %></p>
			</div>
			<div class="text-center" style="margin-bottom: 10%;">
				<p>配送料　 　¥ <%= @carriage.to_s(:delimited) %></p>
			</div>
			<div class="text-center" style="margin-bottom: 10%;">
				<p>割引　 　- ¥ <%= @discount.to_s(:delimited) %></p>
			</div>
			<div class="text-center" style="margin-bottom: 10%;">
				<p>合計　 　¥<%= @total_price.to_s(:delimited) %></p>
			</div>
			<div class="text-center" style="margin-bottom: 10%;">
				<p>(内消費税　 　¥<%= @tax.to_s(:delimited) %>)</p>
			</div>
		</div>
<% end %>