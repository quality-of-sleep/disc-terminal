<h2>商品一覧</h2>
<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<table class="table">
				<% @genres.each do |genre| %>
					<% if genre.name != "未定" %>
						<tr><th><%= link_to genre.name, root_path(genre: genre.id) %></th></tr>
					<% end %>
				<% end %>
			</table>
		</div>
		<div class="col-lg-9 clearfix">
			<% if @genre.present? %>
				<h3><%= @genre.name %>  <%= link_to '全ジャンルを表示', root_path() %></h3>
			<% end %>
			<% @items.each do |item| %>
				<% if item.sales_status != "編集中" %>
					<div class="item-box clearfix">
						<div class="item-left">
							<div class="item-genre">
								<%= item.genre.name %>
							</div>
							<div class="item-image">
								<%= link_to users_item_path(item.id) do %> 
								<%= attachment_image_tag item, :image, :fill, 200, 200, format: 'jpeg', fallback: "/no_image.jpg", size: '150x150' %>
								<% end %>
							</div>
						</div>
						<div class="item-right">
							<a><%= link_to item.name, users_item_path(item.id) %></a>
							<h5 class="item-artist"><%= item.artist.name %></h5>
							<div>
								<p class="item-sales_status">
									<%= item.sales_status %>
								</p>
								<p class="item-price">￥<%= item.price %></p>
							</div>
							<div class="item-opinion">
								<div class="favorites">
									<% if user_signed_in? %>
										<% if item.favorited_by?(current_user) %>
											<li>
												<%= link_to users_item_favorite_path(item, item.favorites), method: :delete do %>
												<span class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"></span>
												<% end %>
												<p>
													<%= item.favorites.count %>
												</p>
											</li>
										<% else %>
											<li>
												<%= link_to users_item_favorites_path(item,), method: :post do %>
												<span class="glyphicon glyphicon-heart" aria-hidden="true" style="color: gray;"></span>
												<% end %>
												<p>
													<%= item.favorites.count %>
												</p>
											</li>
										<% end %>
									<% else %>
									<!--　ログインしないといいねできない -->
										<li>
											<span class="glyphicon glyphicon-heart" aria-hidden="true" style=" color: gray;"></span>
											<p><%= item.favorites.count %></p>
										</li>
									<% end %>
								</div>
								<div class="item-reviews">
									<%= link_to users_item_reviews_path(item) do %>
										<span class="glyphicon glyphicon-comment" aria-hidden="true"></span>
									<% end %>
									<p><%= item.reviews.count %></p>
								</div>
							</div>
						</div>
					</div>
				<% end %>　<!-- if -->
			<% end %> <!-- each -->
			<%= paginate @items, class: "pagenate" %>
		</div>
	</div>
</div>