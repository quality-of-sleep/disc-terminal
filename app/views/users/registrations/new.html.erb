<div class="row item-page">
  <div class="col-md-8 col-md-offset-2">
    <h1>新規アカウント作成ページ</h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-box">
        <p class="alert alert-info">空欄を全てご記入の上、登録ボタンを押してください。</p>
        <%= render "devise/shared/error_messages", resource: resource %>
          <div class="half-content">
            <h2>お名前</h2>
            <div class="field">
              <div class="half1">
                <%= f.label :last_name,"姓" %>
                <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
              </div>
              <div class="half2">
                <%= f.label :first_name, "名" %>
                <%= f.text_field :first_name, class: "form-control"%>
            </div>
          </div>
          <div class="field">
            <div class="half1">
              <%= f.label :last_name_kana,"セイ"%>
              <%= f.text_field :last_name_kana, class: "form-control" %>
            </div>
            <div class="half2">
              <%= f.label  :first_name_kana,"メイ" %>
              <%= f.text_field :first_name_kana, class: "form-control "%>
            </div>
          </div>
        </div>

        <div class="set-content">
          <h2>お住まい</h2>
          <div class="field">
            <div class="subject">
              <%= f.label :postal_code,"郵便番号" %>
              <%= f.number_field :postal_code, placeholder: "ハイフン無し：", class: "form-control" %>
            </div>
            <div class="content">
              <%= f.label :address,"都道府県、市区町村、番地、階数" %>
              <%= f.text_area :address, placeholder: "住所：", class: "form-control"%>
            </div>
          </div>
        </div>

        <div class="set-content">
          <h2>ご連絡先</h2>
          <div class="field">
            <div class="subject">
              <%= f.label :telephone_number,"電話番号" %>
              <%= f.telephone_field :telephone_number, placeholder: "電話番号：", class: "form-control"%>
            </div>
            <div class="content">
              <%= f.label :email,"メールアドレス" %>
              <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス：", class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="dup-content">
          <h2>パスワード</h2>
          <div class="field">
            <div class="dup-top">
              <%= f.label  :password,"確認のため２回入力してください" %>
              <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード：8文字以上必須",class: "form-control"%>
            </div>
          </div>
          <div class="field">
            <div class="dup-bottom">
              <%= f.label  :password,class: "sr-only"%>
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワード確認：", class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "登録", data: { confirm: 'この情報で登録します' }, class:"btn btn-info btn-block only-btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
