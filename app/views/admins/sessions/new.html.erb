<div class="row admin-session">
  <div class="col-md-6 col-md-offset-3 login_form">
    <h2>管理者ログイン</h2>
    <div class='form_body'>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'メールアドレス:'%>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password", placeholder: 'パスワード: 8文字以上' %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "current-password", placeholder: 'パスワード確認' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me,'ログインしたままにする'  %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class:"btn btn-success" %>
        </div>
      <% end %>

      <%= render "admins/shared/links" %>
    </div>
  </div>
</div>
